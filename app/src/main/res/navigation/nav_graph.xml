<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/add_physictivity_fragment">

    <fragment
        android:id="@+id/add_physictivity_fragment"
        android:name="com.gmail.cristiandeives.bogafit.AddPhysictivityFragment"
        android:label="@string/add_physictivity_title" >
        <action
            android:id="@+id/to_date_picker"
            app:destination="@id/date_picker_dialog_fragment" />
    </fragment>

    <dialog
        android:id="@+id/date_picker_dialog_fragment"
        android:name="com.gmail.cristiandeives.bogafit.DatePickerDialogFragment"
        android:label="DatePickerDialogFragment" >
        <argument
            android:name="year"
            app:argType="integer" />
        <argument
            android:name="month"
            app:argType="integer" />
        <argument
            android:name="dayOfMonth"
            app:argType="integer" />
    </dialog>
</navigation>